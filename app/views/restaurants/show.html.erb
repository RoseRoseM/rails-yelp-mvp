<h1><%= @restaurant.name %></h1>

<h3>Reviews</h3>

<% @restaurant.reviews.each do |review| %>
  <li><%= review.content %> <%= "*"*review.rating %> </li>
<% end %>

<%= link_to restaurants_path do %>
  <p><i class="fas fa-undo-alt"></i></i> Back to list</p>
<% end %>

<%= link_to new_restaurant_review_path(@restaurant) do %>
  <p><i class="fas fa-plus"></i> Add a review</p>
<% end %>
